---
import AboutSection from "./AboutSectionEN.astro";
import ExperienceSection from "./ExperienceSectionEN.astro";
import ProjectSection from "./ProjectSectionEN.astro";
---

<section class="min-h-screen flex flex-col md:flex-row items-start justify-start px-6 md:px-12 pt-24 max-w-7xl mx-auto">
    <!-- Lado izquierdo: Nombre + navegación -->
    <aside class="w-full md:w-1/3 mb-12 md:mb-0 md:sticky top-24">
        <h1 class="text-4xl font-bold text-white">Edwin Huamanttupa</h1>
        <p class="mt-1 text-blue-300">
            <span id="typing-role"></span>
            <script type="module" is:inline>
                import { runRoleTyping } from "../../public/scripts/typing.js";
                runRoleTyping();
            </script>

        </p>

        <!-- Navegación lateral -->
        <ul class="mt-12 space-y-4 text-gray-400 font-mono text-sm">
            <li>
                <a href="#aboutEn" class="group flex items-center gap-2 transition-all duration-300 ease-in-out">
                    <span class="block h-px w-6 bg-gray-600 transition-all duration-300 ease-in-out group-hover:w-12 group-hover:bg-blue-400"></span>
                    <span class="transform transition-transform duration-300 ease-in-out group-hover:translate-x-1 group-hover:text-blue-400">
            ABOUT ME
          </span>
                </a>
            </li>
            <li>
                <a href="#experienceEn" class="group flex items-center gap-2 transition-all duration-300 ease-in-out">
                    <span class="block h-px w-6 bg-gray-600 transition-all duration-300 ease-in-out group-hover:w-12 group-hover:bg-blue-400"></span>
                    <span class="transform transition-transform duration-300 ease-in-out group-hover:translate-x-1 group-hover:text-blue-400">
            EXPERIENCE
          </span>
                </a>
            </li>
            <li>
                <a href="#projects" class="group flex items-center gap-2 transition-all duration-300 ease-in-out">
                    <span class="block h-px w-6 bg-gray-600 transition-all duration-300 ease-in-out group-hover:w-12 group-hover:bg-blue-400"></span>
                    <span class="transform transition-transform duration-300 ease-in-out group-hover:translate-x-1 group-hover:text-blue-400">
            PROJECTS
          </span>
                </a>
            </li>
        </ul>

        <!-- Redes sociales -->
        <div class="mt-10 flex space-x-4 text-gray-400">
            <a href="https://github.com/edwinrhc" class="hover:text-blue-400" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-github"></i>
            </a>
            <a href="https://linkedin.com/in/edwinrhc" class="hover:text-blue-400" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-linkedin"></i>
            </a>
            <a href="mailto:ehuamanttupa@erhc-dev.com" class="hover:text-blue-400">
                <i class="fa-solid fa-envelope"></i>
            </a>
        </div>
    </aside>

    <!-- Lado derecho: Contenido (Acerca de mí + Experiencia) -->
    <div class="w-full md:w-2/3 md:pl-32 lg:pl-48 space-y-24">

        <AboutSection />
        <ExperienceSection />
        <ProjectSection />
    </div>
</section>
